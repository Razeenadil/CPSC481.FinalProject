<Page x:Class="CPSC481.FinalProject.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CPSC481.FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="450"
      Title="Login"
      Background="White">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="4" 
                 Grid.Column="2" 
                 Grid.ColumnSpan="3"
                 Grid.RowSpan="2" 
                 Margin="74,165,73,540"  
                 FontSize="24" 
                 BorderThickness="2" 
                 BorderBrush="Black" 
                 Height="40"/>
        
        <TextBlock 
                Text="Username:"
                Grid.Row="4" 
                Grid.Column="2"
                Grid.ColumnSpan="3"
                Grid.RowSpan="2"
                Foreground="Black"
                FontSize="24"
                FontWeight="Medium"
                HorizontalAlignment="Left"
                Margin="74,130,0,579"/>
        
        <PasswordBox 
            Grid.Row="4" 
            Grid.Column="2" 
            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Margin="74,247,73,429"  
            FontSize="24"  
            BorderThickness="2" 
            BorderBrush="Black" 
            Height="40"/>

        <TextBlock Text="Password:"
            Grid.Row="4" 
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Foreground="Black"
            FontSize="24"
            FontWeight="Medium"
            HorizontalAlignment="Left"
            Margin="74,226,0,467" />

        <CheckBox 
                  Grid.Column="2" 
                  Content="Remember Me" 
                  HorizontalAlignment="Left" 
                  Margin="74,340,0,0" 
                  Grid.Row="4"         
                  Foreground="Black"
                  FontStyle="Normal"
                  FontWeight="Medium">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.LayoutTransform>
        </CheckBox>

       
        <Button 
                        Grid.Row="4" 
                        Grid.Column="2" 
                        Margin="54,270,54,178"
                        FontSize="26"
                        FontWeight="Medium"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2"
                        Height="50"
                        Click="Login_Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="#003622" Offset="0"/>
                    <GradientStop Color="#008F5A" Offset="0.5"/>
                    <GradientStop Color="#003622" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            Login
        </Button>

        <Button 
                        Grid.Row="4" 
                        Grid.Column="2" 
                        Margin="54,450,54,178"
                        FontSize="26"
                        FontWeight="Medium"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2"
                        Height="50"
                        Click="Guest_Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="#003622" Offset="0"/>
                    <GradientStop Color="#008F5A" Offset="0.5"/>
                    <GradientStop Color="#003622" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            Continue As Guest
        </Button>


        <TextBlock 
            Grid.Row="4" 
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Foreground="DarkBlue"
            FontSize="24"
            TextDecorations="Underline"
            FontWeight="Medium"
            HorizontalAlignment="Center"
            Margin="0,598,0,115">
             <Hyperlink
                Name="CreateAccount"
                Click="CreateAccount_Click">Don't have an account?</Hyperlink>
        </TextBlock>

        <TextBlock 
            Grid.Row="4" 
            Grid.Column="2"           
            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Foreground="Black"
            FontStyle="Normal"
            FontSize="15"
            FontWeight="Medium"
            HorizontalAlignment="Left"
            Margin="221,310,0,347">
            <Hyperlink
                Name="ForgotPassword"
                Click="ForgotPassword_Click">Forgot Password?</Hyperlink>
        </TextBlock>

        <Button
            Name="NavBackButton"
            Grid.Column="2" 
            HorizontalAlignment="Left" 
            Grid.Row="4" 
            VerticalAlignment="Top" 
            Height="50" Width="50" 
            Margin="5 10 0 0"  
            Click="Back_Button_Click" 
            Cursor="Hand" 
            Visibility="Visible" 
            Grid.RowSpan="3" 
            Grid.ColumnSpan="3">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Image Source="/Images/HeaderNavIcons/left-arrow.png"></Image>
                </ControlTemplate>
            </Button.Template>

        </Button>
        

        
        <Label Grid.Column="2" Content="Login" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" FontSize="32" Margin="0,12,0,0" FontWeight="Bold"/>
        <Separator Grid.Column="2" Margin="0,65,0,660" Grid.Row="4" BorderBrush="Black" BorderThickness="4"/>

    </Grid>
</Page>
